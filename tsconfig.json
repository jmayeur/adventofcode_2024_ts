{
    "include": [
        "./src/*","./src/**/*", ".eslintrc.js"
    ],
    "exclude": [
        "*.config.*", "./build", "./reports/"
    ],
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["ES2022"],
        "moduleResolution": "Node",
        "rootDir": ".",
        "outDir": "./build/",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "types": ["node"],
        "baseUrl": "./src",
        "strict": true
    },
    "ts-node": {
        "esm": true
    }
}